@{
    ViewBag.Title = "Login";
    Layout = null; // Sin layout para que tenga su propio estilo limpio
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>
    <div class="login-container">
        <h2>Iniciar Sesión</h2>

        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
        {
            <p>Usuario:</p>
            @Html.TextBox("User", null, new { @class = "form-control", placeholder = "Ingrese su usuario" })

            <p>Contraseña:</p>
            @Html.Password("Password", null, new { @class = "form-control", placeholder = "Ingrese su contraseña" })

            <br />
            <input type="submit" value="Iniciar Sesión" class="btn-login" />
        }

        @if (ViewBag.Error != null)
        {
            <p class="error">@ViewBag.Error</p>
        }
    </div>
</body>
</html>